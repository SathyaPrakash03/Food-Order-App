<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a101039706.a1101039706.CuisineActivity">

    <TextView
        android:id="@+id/cuisineType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="Select cuisine type"
        android:textColor="#D4A539"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/radioGroupCusine"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/cuisineType"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="10dp"
            android:gravity="left">

            <RadioButton
                android:id="@+id/radioBtnIndian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Indian"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/radioBtnMexican"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mexican"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/radioBtnChinese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chinese"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/radioBtnItalian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Italian"
                android:textSize="20dp" />
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/BtnNext"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:background="?attr/colorBackgroundFloating"
        android:backgroundTint="#D4A539"
        android:onClick="getCheckedRadio"
        android:text="Next"
        android:textColor="#800000"
        android:textSize="20dp" />


</RelativeLayout>
